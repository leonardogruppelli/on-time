.btn
  display inline-block

  &--menu
    width 80px
    height 100%
    position relative
    padding 0 20px
    font-size 0
    +above(l)
      width 70px

    span
      width 100%
      height 2px
      display block
      margin 3px 0
      background-color $purple
      border-radius 4px
      transition .2s ease-out

    &.is-active
      span
        &:first-of-type
          transform rotate(45deg) translate(25%, 100%)

        &.middle
          transform translateX(-15px)
          opacity 0

        &:last-of-type
          transform rotate(-45deg) translate(25%, -100%)