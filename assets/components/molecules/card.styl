.card
  width 100%
  display table
  padding 8% 10%
  background-color $grey

  &__icon
  &__content
    display block
    +above(l)
      display table-cell
      vertical-align middle

  &__icon
    width 100%
    text-align center
    margin-bottom 20px
    +above(l)
      width 60px
      height 60px
      padding-right 15px
      margin-bottom 0
      text-align left

    svg
      width 80px
      height auto
      max-width 60%
      +above(l)
        width 100%
        height 100%
        max-width none
        color inherit

  &__content

    h3
      margin-bottom 10px
      font-size rem(12px)
      font-weight 500
      text-transform uppercase

    span
      font-family Montserrat
      font-size rem(42px)
      font-weight 300