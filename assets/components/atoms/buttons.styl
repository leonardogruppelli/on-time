.btn
  display inline-block

  &--menu
    width 70px
    height 100%
    position relative
    float left
    padding 0 20px
    font-size 0

    span
      width 100%
      height 2px
      display block
      margin 5px 0
      background-color $purple
      border-radius 4px
      transition .2s ease-out

    &.is-active
      span

        &:first-of-type
          transform rotate(45deg) translate(5px, 5px)

        &.middle
          transform translateX(-15px)
          opacity 0

        &:last-of-type
          transform rotate(-45deg) translate(5px, -5px)