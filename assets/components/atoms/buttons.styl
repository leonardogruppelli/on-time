.btn
  display inline-block
  padding 15px 25px
  box-shadow 0 0 10px rgba($black, 0.2)
  border-radius 4px
  font-family Montserrat
  font-size rem(14px)
  font-weight 300
  color $grey
  text-transform uppercase
  cursor pointer

  &--menu
    width 60px
    height 100%
    position relative
    float left
    padding 0 20px
    border solid $purple
    border-width 0 1px 0 1px
    border-radius 0
    font-size 0
    +above(l)
      width 70px

    span
      width 100%
      height 2px
      display block
      margin 5px 0
      background-color $purple
      border-radius 4px
      transition .2s ease-out

    &.is-active
      span

        &:first-of-type
          transform rotate(45deg) translate(5px, 5px)

        &.middle
          transform translateX(-15px)
          opacity 0

        &:last-of-type
          transform rotate(-45deg) translate(5px, -5px)